#!/bin/bash

setxkbmap -model pc105 -layout fr
echo "Script de démarrage sur $HOSTNAME ..."
if [ "$HOSTNAME" = "autan" ]; then
	salutation="au temps pour moi, et autant en emporte le winde"
	#synergys -f --config .synergy.conf &
