#!/bin/sh
aa=$(mktemp)
bb=$(mktemp)
cc=$(mktemp)
echo "1st file, finish with Ctrl-D:  =========="
cat > $aa
echo "2nd file, finish with Ctrl-D:  =========="
cat > $bb
echo "3rd file, , finish with Ctrl-D: =========="
cat > $cc
sed -i "s/  */ /g" $aa
sed -i "s/  */ /g" $bb
sed -i "s/  */ /g" $cc
vimdiff $aa $bb $cc

